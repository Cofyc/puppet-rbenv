#!/usr/bin/env bash
RBENV=<%= scope.lookupvar('rbenv::params::install_dir') %>
PATH=$RBENV/bin:$PATH
OWNER=<%= scope.lookupvar('rbenv::params::owner') %>
GROUP=<%= scope.lookupvar('rbenv::params::group') %> 
chown -R $OWNER:$GROUP $RBENV/plugins
pushd $RBENV/plugins/ruby-build
  /usr/bin/git reset --hard HEAD
  /usr/bin/git pull 
popd
if [[ ! `rbenv versions | grep <%= title %>` ]]; then
rbenv install <%= title %> 
rbenv rehash
rbenv shell <%= title %>
gem install bundler
rbenv rehash
chown -R $OWNER:$GROUP $RBENV/versions/<%= title %>
chmod -R g+w $RBENV/versions/<%= title %>
<% if global == true %>
rbenv global <%= title %>
<% end %>
fi
